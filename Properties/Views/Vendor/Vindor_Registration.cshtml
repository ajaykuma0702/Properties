<script>
    // Get references to the password and retype password fields
    var passwordField = document.getElementById('password');
    var rePasswordField = document.getElementById('rePassword');

    // Get references to the message element and submit button
    var messageElement = document.getElementById('message');
    var submitButton = document.getElementById('submitButton');

    // Add an input event listener to both password fields
    passwordField.addEventListener('input', validatePassword);
    rePasswordField.addEventListener('input', validatePassword);

    // Function to validate whether passwords match
    function validatePassword() {
        var password = passwordField.value;
        var rePassword = rePasswordField.value;

        // Check if passwords match
        if (password === rePassword) {
            // Display a success message
            messageElement.textContent = 'Password match!';
            messageElement.style.color = 'green';
            // Enable the submit button
            submitButton.removeAttribute('disabled');
        } else {
            // Display an error message

            messageElement.textContent = 'Password does not match!';
            messageElement.style.color = "red";
            // Disable the submit button
            submitButton.setAttribute('disabled', 'disabled');
        }
    }

</script>

